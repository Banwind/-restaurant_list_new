<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <ol>
    <li><input type="text" placeholder="name" name="name" value="{{ restaurant.name }}"></li>
    <li><input type="text" placeholder="name_en" name="name_en" value="{{ restaurant.name_en }}"></li>
    <li><input type="text" placeholder="category" name="category" value="{{ restaurant.category }}"></li>
    <li><input type="text" placeholder="image" name="image" value="{{ restaurant.image }}"></li>
    <li><input type="text" placeholder="location" name="location" value="{{ restaurant.location }}"></li>
    <li><input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}"></li>
    <li><input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}"></li>
    <li><input type="text" placeholder="rating" name="rating" value="{{ restaurant.rating }}"></li>
    <li><input type="text" placeholder="description" name="description" value="{{ restaurant.description }}"></li>
  </ol>
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>