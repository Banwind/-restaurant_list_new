<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a href="./restaurants/new">新增一間餐廳</a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner" >
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-9 col-6 mx-auto" >
      <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        {{#each restaurant}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="col-lg-4 col-md-6 mb-4">
            <img class="card-img-top" style="height:200px; width:300px" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <span style="font-size: 24px" class="card-title mb-1">{{this.name}}</span>
              <span>(⭐{{this.rating}})</span>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2">{{this.category}}</i>
              </div>
            </div>
            <div style="display: flex; justify-content: flex-end;">
              <a href="./restaurants/{{this._id}}" style="display: inline-block; margin-right: 20px;">detail</a>
              <a href="./restaurants/{{this._id}}/edit" style="display: inline-block; margin-right: 20px;">edit</a>
              <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline-block; margin-right: 20px;">
                <button type="submit">delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>